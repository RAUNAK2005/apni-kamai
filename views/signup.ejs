<%- include('partials/header') %>
<section class="apni-section auth-section">
  <div class="auth-container">
    <h2>Create Your Account</h2>
    <div class="auth-form-container">
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="auth-error">
          <i class="fas fa-exclamation-circle"></i>
          <%= error %>
        </div>
      <% } %>
      <form action="/signup" method="POST" class="auth-form">
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" id="username" name="username" placeholder="Enter your username" class="apni-input" required>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" placeholder="Enter your email" class="apni-input" required>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" placeholder="Create a strong password" class="apni-input" required>
        </div>
        <div class="form-group">
          <label for="confirm-password">Confirm Password</label>
          <input type="password" id="confirm-password" name="confirm-password" placeholder="Confirm your password" class="apni-input" required>
        </div>
        <button type="submit" class="apni-btn auth-btn">Sign Up</button>
      </form>
      <div class="auth-alt">
        Already have an account? <a href="/login">Login</a>
      </div>
    </div>
  </div>
</section>
<%- include('partials/footer') %>