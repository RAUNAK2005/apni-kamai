<%- include('partials/header') %>
<section class="apni-section auth-section">
  <div class="auth-container">
    <h2>Welcome Back</h2>
    <div class="auth-form-container">
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="auth-error">
          <i class="fas fa-exclamation-circle"></i>
          <%= error %>
        </div>
      <% } %>
      <form action="/login" method="POST" class="auth-form">
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" id="username" name="username" placeholder="Enter your username" class="apni-input" required>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" placeholder="Enter your password" class="apni-input" required>
        </div>
        <div class="form-group remember-me">
          <div class="checkbox-container">
            <input type="checkbox" id="remember" name="remember">
            <label for="remember">Remember me</label>
          </div>
          <a href="#" class="forgot-password">Forgot Password?</a>
        </div>
        <button type="submit" class="apni-btn auth-btn">Login</button>
      </form>
      <div class="auth-alt">
        Don't have an account? <a href="/signup">Sign Up</a>
      </div>
      <div class="auth-hint">
        <i class="fas fa-info-circle"></i>
        <span>Try username "raunak" and password "2000"</span>
      </div>
    </div>
  </div>
</section>
<%- include('partials/footer') %>